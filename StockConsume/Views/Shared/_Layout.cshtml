@using StockConsume.Helper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stock Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StockConsume.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2563eb;
            --secondary-color: #f8fafc;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
        }
        .bg-primary-custom {
            background-color: var(--primary-color) !important;
        }
        .text-primary-custom {
            color: var(--primary-color) !important;
        }
        .bg-success-custom {
            background-color: var(--success-color) !important;
        }
        .text-success-custom {
            color: var(--success-color) !important;
        }
        .bg-warning-custom {
            background-color: var(--warning-color) !important;
        }
        .text-warning-custom {
            color: var(--warning-color) !important;
        }
        .bg-danger-custom {
            background-color: var(--danger-color) !important;
        }
        .text-danger-custom {
            color: var(--danger-color) !important;
        }
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 12px 20px;
            margin: 4px 0;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        .sidebar .nav-link:hover {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
        }
        .sidebar .nav-link.active {
            color: white;
            background-color: rgba(255, 255, 255, 0.2);
        }
        .main-content {
            background-color: #f8fafc;
            min-height: 100vh;
        }
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        .btn-primary-custom {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        .btn-primary-custom:hover {
            background-color: #1d4ed8;
            border-color: #1d4ed8;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 px-0">
                <div class="sidebar">
                    <div class="p-3">
                        <div class="d-flex align-items-center mb-4">
                            <i class="bi bi-boxes text-white me-2" style="font-size: 24px;"></i>
                            <h4 class="text-white mb-0">Stock Manager</h4>
                        </div>
                        
                        <nav class="nav flex-column">
                            @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-2"></i>Dashboard
                                </a>
                                
                                <hr class="text-white-50">
                                <small class="text-white-50 px-3 text-uppercase fw-bold">Inventory</small>
                                
                                <a class="nav-link" asp-controller="Product" asp-action="ProductList">
                                    <i class="bi bi-box me-2"></i>Products
                                </a>
                                <a class="nav-link" asp-controller="Category" asp-action="CategoryList">
                                    <i class="bi bi-tags me-2"></i>Categories
                                </a>
                                <a class="nav-link" asp-controller="Supplier" asp-action="SupplierList">
                                    <i class="bi bi-truck me-2"></i>Suppliers
                                </a>
                                
                                <hr class="text-white-50">
                                <small class="text-white-50 px-3 text-uppercase fw-bold">Transactions</small>
                                
                                <a class="nav-link" asp-controller="Purchase" asp-action="PurchaseList">
                                    <i class="bi bi-cart-plus me-2"></i>Purchases
                                </a>
                                <a class="nav-link" asp-controller="Sale" asp-action="SaleList">
                                    <i class="bi bi-cart-check me-2"></i>Sales
                                </a>
                                <a class="nav-link" asp-controller="Invoice" asp-action="InvoiceList">
                                    <i class="bi bi-receipt me-2"></i>Invoices
                                </a>
                                
                                <hr class="text-white-50">
                                <small class="text-white-50 px-3 text-uppercase fw-bold">Reports</small>
                                
                                <a class="nav-link" asp-controller="InvoiceReport" asp-action="Index">
                                    <i class="bi bi-file-earmark-text me-2"></i>Invoice Report
                                </a>
                                <a class="nav-link" asp-controller="Reports" asp-action="Index">
                                    <i class="bi bi-graph-up me-2"></i>Analytics
                                </a>
                                <a class="nav-link" asp-controller="ApiTest" asp-action="Index">
                                    <i class="bi bi-wrench me-2"></i>API Test
                                </a>
                                <a class="nav-link" asp-controller="Query" asp-action="SendQuery">
                                    <i class="bi bi-people me-2"></i>
                                    Query
                                </a>
                                @if (TokenManager.IsAdmin)
                                {
                                    <a class="nav-link" asp-controller="User" asp-action="UserList">
                                        <i class="bi bi-people me-2"></i>Users
                                    </a>
                                  
                                   
                                }
                                
                                <hr class="text-white-50">
                                <a class="nav-link" href="#" onclick="logout()">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </a>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Login" asp-action="Index">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                                </a>
                                <a class="nav-link" asp-controller="Register" asp-action="Index">
                                    <i class="bi bi-person-plus me-2"></i>Register
                                </a>
                            }
                        </nav>
                    </div>
                </div>
            </div>
            
            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 px-0">
                <div class="main-content">
                    <!-- Top Bar -->
                    <div class="bg-white border-bottom px-4 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@ViewData["Title"]</h5>
                            <div class="d-flex align-items-center">
                                @if (User?.Identity?.IsAuthenticated ?? false)
                                {
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-person-circle me-2"></i>@User.Identity.Name
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><span class="dropdown-item-text text-muted">Role: @User.FindFirst("http://schemas.microsoft.com/ws/2008/06/identity/claims/role")?.Value</span></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form asp-controller="Login" asp-action="Logout" method="post" class="px-3 py-1">
                                                    <button type="submit" class="btn btn-link dropdown-item"><i class="bi bi-box-arrow-right"></i> Logout</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <!-- Page Content -->
                    <div class="p-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                document.querySelector('form[action="/Login/Logout"]').submit();
            }
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
