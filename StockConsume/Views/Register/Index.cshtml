@model RegisterViewModel
@{
    ViewData["Title"] = "Register - Stock Management System";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS + Icons  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        :root {
            --primary-color: #2563eb;
            --gradient-start: #667eea;
            --gradient-end: #764ba2;
        }

        body {
            background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .auth-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .auth-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            padding: 40px;
            width: 100%;
            max-width: 480px;
            position: relative;
            overflow: hidden;
        }

            .auth-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--primary-color), #1d4ed8);
            }

        .brand-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            margin-bottom: 20px;
        }

        .brand-text {
            font-size: 24px;
            font-weight: 700;
            color: var(--primary-color);
        }

        .auth-header {
            text-align: center;
            margin-bottom: 24px;
        }

        .auth-title {
            font-size: 28px;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 8px;
        }

        .auth-subtitle {
            color: #6b7280;
            font-size: 14px;
        }

        .form-floating {
            margin-bottom: 16px;
        }

            .form-floating > .form-control,
            .form-floating > textarea.form-control {
                border: 2px solid #e5e7eb;
                border-radius: 12px;
                padding: 12px 16px;
                height: 56px;
                transition: all 0.3s ease;
            }

            .form-floating > textarea.form-control {
                height: 100px;
            }

                .form-floating > .form-control:focus,
                .form-floating > textarea.form-control:focus {
                    border-color: var(--primary-color);
                    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
                }

            .form-floating > label {
                color: #6b7280;
                padding: 16px;
            }

        .btn-register {
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            border: none;
            border-radius: 12px;
            color: #fff;
            font-weight: 600;
            height: 48px;
            width: 100%;
            margin-top: 8px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .btn-register:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(37, 99, 235, 0.3);
            }

            .btn-register:disabled {
                opacity: 0.7;
                cursor: not-allowed;
            }

        .auth-footer {
            text-align: center;
            margin-top: 24px;
            padding-top: 16px;
            border-top: 1px solid #e5e7eb;
        }

        .auth-link {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
        }

            .auth-link:hover {
                color: #1d4ed8;
                text-decoration: underline;
            }

        .alert {
            border-radius: 12px;
            margin-bottom: 16px;
        }

        .loading {
            display: none;
        }

        .spin {
            animation: spin 1s linear infinite;
        }
        @@keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="brand-logo">
                <span style="font-size: 28px;">ðŸ“¦</span>
                <span class="brand-text">Stock Manager</span>
            </div>

            <div class="auth-header">
                <h1 class="auth-title">Create your account</h1>
                <p class="auth-subtitle">Fill in the details below to get started</p>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            <form asp-controller="Register" asp-action="Index" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="form-floating">
                    <input type="text" class="form-control" id="username" name="Username" placeholder="Username" required />
                    <label for="username">Username</label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input type="email" class="form-control" id="email" name="Email" placeholder="Email" required />
                    <label for="email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input type="tel" class="form-control" id="phone" name="Phone" placeholder="Phone no"
                           inputmode="tel" pattern="^[0-9+\-\s()]{6,}$" required />
                    <label for="phone">Phone no</label>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input type="password" class="form-control" id="password" name="Password" placeholder="Password" minlength="6" required />
                    <label for="password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <textarea class="form-control" id="address" name="Address" placeholder="Address" required style="height: 80px; resize: vertical;"></textarea>
                    <label for="address">Address</label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-register">
                    <span class="btn-text">Sign Up</span>
                    <span class="loading">
                        <i class="bi bi-arrow-clockwise spin"></i> Creating account...
                    </span>
                </button>
            </form>

            <div class="auth-footer">
                <p class="text-muted mb-0">
                    Already have an account?
                    <a href="@Url.Action("Index", "Login")" class="auth-link">Login</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
