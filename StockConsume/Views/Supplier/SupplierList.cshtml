@model List<SupplierModel>
@{
    ViewData["Title"] = "Supplier List";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Supplier Management</h2>
    <a asp-controller="Supplier" asp-action="AddEdit" class="btn btn-primary-custom">
        <i class="bi bi-plus-circle me-2"></i>Add New Supplier
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Supplier ID</th>
                        <th>Supplier Name</th>
                        <th>Contact</th>
                        <th>Address</th>
                        <th>User</th>
                        <th>Created At</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SupplierId</td>
                                <td>@item.SupplierName</td>
                                <td>@item.Contact</td>
                                <td>@(item.Address?.Length > 30 ? item.Address.Substring(0, 30) + "..." : item.Address)</td>
                                <td>@item.User?.UserName</td>
                                <td>@item.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a asp-action="AddEdit" asp-controller="Supplier" asp-route-id="@item.SupplierId" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-controller="Supplier" asp-route-id="@item.SupplierId" class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this supplier?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No Suppliers found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
