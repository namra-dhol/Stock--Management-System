@model List<SaleDetailModel>
@{
    ViewData["Title"] = "Sale Detail List";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Sale Detail Management</h2>
    <a asp-controller="SaleDetail" asp-action="AddEdit" class="btn btn-primary-custom">
        <i class="bi bi-plus-circle me-2"></i>Add New Sale Detail
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Sale Detail ID</th>
                        <th>Sale ID</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        <th>Created At</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SaleDetailId</td>
                                <td>@item.SaleId</td>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>₹@item.UnitPrice</td>
                                <td>₹@item.TotalPrice</td>
                                <td>@item.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a asp-action="AddEdit" asp-controller="SaleDetail" asp-route-id="@item.SaleDetailId" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-controller="SaleDetail" asp-route-id="@item.SaleDetailId" class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this sale detail?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No Sale Details found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
